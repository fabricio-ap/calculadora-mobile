<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container_botao">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">0dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="operacao_botao" parent="container_botao">
        <item name="android:background">@color/operadores</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="numeros_botao" parent="container_botao">
        <item name="android:background">@drawable/botao_numero_clicado</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="igual_botao" parent="container_botao">
        <item name="android:background">@color/botao_igual</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>